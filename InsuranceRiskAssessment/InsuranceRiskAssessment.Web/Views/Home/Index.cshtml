@{
    ViewData["Title"] = "Начална страница";
}

<!-- hero section -->
<section id="home" class="min-h-100vh flex justify-start items-center">
    <div id='mainLabel' class="mx-5 md-mx-l5">
        <div class='mainLabel'>
            <h1 class="white fs-l3 lh-2 md-fs-xl1 md-lh-1 fw-900 ">Мястото за оценка<br />на вашия риск.</h1>
        </div>
    </div>
</section>

<!-- slider -->
<section id="features" class="relative bg-indigo-lightest-10">
    <div id="slider-1">
        <div class="p-10 md-p-l10 flex justify-center items-center flex-column text-center">
            <h2 class="white fs-l3 fw-900">Оцени риска на своето Движемо имущество.</h2>
            <p class="indigo-lightest fw-600 fs-m1 opacity-30 my-5">
                Автомобили, лодки ,самолети и каравани.
            </p>
            <a asp-area="Identity" asp-page="/Account/Login" class="button-md bg-indigo white fs-s3 br-3 black fw-600 no-underline m-5">Оцени сега</a>
        </div>
        <div class="p-10 md-p-l10 flex justify-center items-center flex-column text-center">
            <h2 class="white fs-l3 fw-900">Оцени риска на своето Недвижемо имущество.</h2>
            <p class="indigo-lightest fw-600 fs-m1 opacity-30 my-5">
                Бизнес сгради , жилищни сгради , вилни сгради, стопанско имущество.
            </p>
            <a asp-area="Identity" asp-page="/Account/Login" class="button-md bg-indigo white fs-s3 br-3 black fw-600 no-underline m-5">Оцени сега</a>
        </div>
    </div>
    <ul class="absolute list-none w-100pc flex justify-between top-50pc">
        <li>
            <button class="prev ml-10 br-round border-indigo-lightest indigo-lightest  bg-transparent flex justify-center items-center p-2 focus-indigo-lighter outline-none">
                <i data-feather="chevron-left"></i>
            </button>
        </li>
        <li>
            <button class="next mr-10 br-round border-indigo-lightest indigo-lightest  bg-transparent flex justify-center items-center p-2  focus-indigo-lighter outline-none">
                <i data-feather="chevron-right"></i>
            </button>
        </li>
    </ul>
</section>

<!-- features -->
<section class="p-10 md-p-l5">
    <div class="flex flex-column md-flex-row mx-auto">
        <div class="w-100pc md-w-40pc">
            <div class="br-8 p-5 m-5">
                <div class="flex justify-center items-center bg-indigo-lightest-10 white w-l5 h-l5 br-round mb-5">
                    <i data-feather="home" class="w-l5"></i>
                </div>
                <h4 class="white fw-600 fs-m3 mb-5">Недвижемо имущество</h4>
                <div class="indigo-lightest fw-600 fs-m1 lh-3 opacity-50">
                    Оценете точният застрахователен риск на вашите блокове,кооперации,предприятия,
                    стопански сградим гаражи, работилници и търговски предприятия.
                </div>
                <a asp-area="Identity" asp-page="/Account/Login"
                   class="mt-5 button bg-indigo-lightest-10 fs-s3 white no-underline hover-opacity-100 hover-scale-up-1 ease-300">Оценете сега</a>
            </div>
        </div>
        <div class="w-100pc md-w-40pc">
            <div class="br-8 p-5 m-5">
                <div class="flex justify-center items-center bg-indigo-lightest-10 white w-l5 h-l5 br-round mb-5">
                    <i data-feather="truck" class="w-l5"></i>
                </div>
                <h4 class="white fw-600 fs-m3 mb-5">Движемо имущество</h4>
                <div class="indigo-lightest fw-600 fs-m1 opacity-50">
                    Най-точната оценка на вашият морски , въздушен и сухопътен транспорт. 
                </div>
                <a asp-area="Identity" asp-page="/Account/Login"
                   class="mt-5 button bg-indigo-lightest-10 fs-s3 white no-underline hover-opacity-100 hover-scale-up-1 ease-300">Оценете сега</a>
            </div>
        </div>
        <div class="w-100pc md-w-40pc">
            <div class="br-8 p-5 m-5">
                <div class="flex justify-center items-center bg-indigo-lightest-10 white w-l5 h-l5 br-round mb-5">
                    <i data-feather="percent" class="w-l5"></i>
                </div>
                <h4 class="white fw-600 fs-m3 mb-5">Точен резултат</h4>
                <div class="indigo-lightest fw-600 fs-m1 opacity-50">
                    Само с няколко лесни стъпки можете да разберете точния риск на вашата собственост.
                </div>
                <a asp-area="Identity" asp-page="/Account/Login"
                   class="mt-5 button bg-indigo-lightest-10 fs-s3 white no-underline hover-opacity-100 hover-scale-up-1 ease-300">Оценете сега</a>
            </div>
        </div>
    </div>
</section>


@using Microsoft.AspNetCore.Identity
@using InsuranceRiskAssessment.DataAccessLayer.Data
@inject SignInManager<InsuranceBrokerUser> SignInManager

@{
    ViewData["Title"] = "Insurance Risk Assesment - Начална страница";
}

@if (!SignInManager.IsSignedIn(User))
{
    <section id="home" class="min-h-100vh flex justify-start items-center">
        <div id='mainLabel' class="mx-5 md-mx-l5">
            <div class='mainLabel'>
                <h1 class="white fs-l3 lh-2 md-fs-xl1 md-lh-1 fw-900 ">Мястото за оценка<br />на вашия риск.</h1>
            </div>
        </div>
    </section>

    <section id="features" class="relative bg-indigo-lightest-10">
        <div id="slider-1">
            <div class="p-10 md-p-l10 flex justify-center items-center flex-column text-center">
                <h2 class="white fs-l3 fw-900">Оцени риска на своето Движемо имущество.</h2>
                <p class="indigo-lightest fw-600 fs-m1 opacity-30 my-5">
                    Автомобили, лодки ,самолети и каравани.
                </p>
                <a asp-area="Identity" asp-page="/Account/Login" id='homePageButton' class="button-md bg-indigo white fs-s3 br-3 black fw-600 no-underline m-5">Оцени сега</a>
            </div>
            <div class="p-10 md-p-l10 flex justify-center items-center flex-column text-center">
                <h2 class="white fs-l3 fw-900">Оцени риска на своето Недвижемо имущество.</h2>
                <p class="indigo-lightest fw-600 fs-m1 opacity-30 my-5">
                    Бизнес сгради , жилищни сгради , вилни сгради, стопанско имущество.
                </p>
                <a asp-area="Identity" asp-page="/Account/Login" id='homePageButton' class="button-md bg-indigo white fs-s3 br-3 black fw-600 no-underline m-5">Оцени сега</a>
            </div>
        </div>
        <ul class="absolute list-none w-100pc flex justify-between top-50pc">
            <li>
                <button class="prev ml-10 br-round border-indigo-lightest indigo-lightest  bg-transparent flex justify-center items-center p-2 focus-indigo-lighter outline-none">
                    <i data-feather="chevron-left"></i>
                </button>
            </li>
            <li>
                <button class="next mr-10 br-round border-indigo-lightest indigo-lightest  bg-transparent flex justify-center items-center p-2  focus-indigo-lighter outline-none">
                    <i data-feather="chevron-right"></i>
                </button>
            </li>
        </ul>
    </section>

    <section class="p-10 md-p-l5">
        <div class="flex flex-column md-flex-row mx-auto">
            <div class="w-100pc md-w-40pc">
                <div class="br-8 p-5 m-5">
                    <div class="flex justify-center items-center bg-indigo-lightest-10 white w-l5 h-l5 br-round mb-5">
                        <i data-feather="home" class="w-l5"></i>
                    </div>
                    <h4 class="white fw-600 fs-m3 mb-5">Недвижемо имущество</h4>
                    <div class="indigo-lightest fw-600 fs-m1 lh-3 opacity-50">
                        Оценете точният застрахователен риск на вашите блокове,кооперации,предприятия,
                        стопански сградим гаражи, работилници и търговски предприятия.
                    </div>
                    <a asp-area="Identity" asp-page="/Account/Login"
                   id='homePageButton' class="mt-5 button bg-indigo-lightest-10 fs-s3 white no-underline hover-opacity-100 hover-scale-up-1 ease-300">Оценете сега</a>
                </div>
            </div>
            <div class="w-100pc md-w-40pc">
                <div class="br-8 p-5 m-5">
                    <div class="flex justify-center items-center bg-indigo-lightest-10 white w-l5 h-l5 br-round mb-5">
                        <i data-feather="truck" class="w-l5"></i>
                    </div>
                    <h4 class="white fw-600 fs-m3 mb-5">Движемо имущество</h4>
                    <div class="indigo-lightest fw-600 fs-m1 opacity-50">
                        Най-точната оценка на вашият морски , въздушен и сухопътен транспорт.
                    </div>
                    <a asp-area="Identity" asp-page="/Account/Login"
                   id='homePageButton' class="mt-5 button bg-indigo-lightest-10 fs-s3 white no-underline hover-opacity-100 hover-scale-up-1 ease-300">Оценете сега</a>
                </div>
            </div>
            <div class="w-100pc md-w-40pc">
                <div class="br-8 p-5 m-5">
                    <div class="flex justify-center items-center bg-indigo-lightest-10 white w-l5 h-l5 br-round mb-5">
                        <i data-feather="percent" class="w-l5"></i>
                    </div>
                    <h4 class="white fw-600 fs-m3 mb-5">Точен резултат</h4>
                    <div class="indigo-lightest fw-600 fs-m1 opacity-50">
                        Само с няколко лесни стъпки можете да разберете точния риск на вашата собственост.
                    </div>
                    <a asp-area="Identity" asp-page="/Account/Login"
                   id='homePageButton' class="mt-5 button bg-indigo-lightest-10 fs-s3 white no-underline hover-opacity-100 hover-scale-up-1 ease-300">Оценете сега</a>
                </div>
            </div>
        </div>
    </section>

    <section id="testimonials" class="p-10 md-p-l5">
        <div id="slider-2">
            <div class="px-3">
                <div class="p-8 br-8 bg-indigo-lightest-10 relative">
                    <span class="fs-l5 lh-1 white opacity-10 absolute top-0 z--1">&#10077;</span>
                    <p class="fw-600 fs-m1 indigo-lightest opacity-80 italic ls-wider">
                        Преоткрих работата си,щом започнах да използвам приложението за оценка на риска, помага ми много и ме улеснява
                        по време на работата ми.
                    </p>
                    <div class="flex items-center my-5">
                        <div class="ml-4 fs-s1">
                            <div class="indigo-lightest">Теодора Корадова</div>
                            <div class="indigo-lightest opacity-20">Застраховател</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="px-3">
                <div class="p-8 br-8 bg-indigo-lightest-10 relative">
                    <span class="fs-l5 lh-1 white opacity-10 absolute top-0 z--1">&#10077;</span>
                    <p class="fw-600 fs-m1 indigo-lightest opacity-80 italic ls-wider">
                        Да си застраховател не е лесно, програми като Insurance Risk Assessment са винаги добре дошли при нас.
                    </p>
                    <div class="flex items-center my-5">
                        <div class="ml-4 fs-s1">
                            <div class="indigo-lightest">Янко Митов</div>
                            <div class="indigo-lightest opacity-20">Застраховател</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="px-3">
                <div class="p-8 br-8 bg-indigo-lightest-10 relative">
                    <span class="fs-l5 lh-1 white opacity-10 absolute top-0 z--1">&#10077;</span>
                    <p class="fw-600 fs-m1 indigo-lightest opacity-80 italic ls-wider">
                        Благодарение на сайта, предприех мерки подобрявайки нивото на риска в своето предприятие.
                    </p>
                    <div class="flex items-center my-5">
                        <div class="ml-4 fs-s1">
                            <div class="indigo-lightest">Карина Лютова</div>
                            <div class="indigo-lightest opacity-20">Собственик на малък бизнес</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="px-3">
                <div class="p-8 br-8 bg-indigo-lightest-10 relative">
                    <span class="fs-l5 lh-1 white opacity-10 absolute top-0 z--1">&#10077;</span>
                    <p class="fw-600 fs-m1 indigo-lightest opacity-80 italic ls-wider">
                        Сайта изключително много ми помага в работата ми като застраховател.
                    </p>
                    <div class="flex items-center my-5">
                        <div class="ml-4 fs-s1">
                            <div class="indigo-lightest">Иван Петров</div>
                            <div class="indigo-lightest opacity-20">Застраховател</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

}
else
{
    <section id="home">
        <div class="background-after-login">
            <div class="background-left">
                <div class="left-elements">
                    <p class="real-estate-text">Проверете резултатите си за Недвижемо имущество</p>
                    <form action=@Url.Action("Index","RealEstates")>
                        <input class="button-real-estate" type="submit" value="Недвижемо имущество" />
                    </form>
                    <div class="estate-icon">
                        <img src="~/img/movablePropImg.png" alt="">
                    </div>
                </div>
            </div>
            <div class="background-right">
                <div class="right-elements">
                    <p class="real-estate-text">Проверете резултатите си за Движемо имущество</p>
                    <form action=@Url.Action("Index","MovableProperties")>
                        <input class="button-real-estate" type="submit" value="Движемо имущество" />
                    </form>
                    <div id="realEstate-icon" class="estate-icon">
                        <img src="~/img/realEstateIcon.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </section>
}
@using Microsoft.AspNetCore.Identity
@using InsuranceRiskAssessment.DataAccessLayer.Data
@inject SignInManager<InsuranceBrokerUser> SignInManager
@inject UserManager<InsuranceBrokerUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <p>@User.Identity.Name!</p>
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="nav-link btn btn-link text-dark">Излез</button>
    </form>
}
else
{
    <a id="loginBtn" class="button-login-partial" asp-area="Identity" asp-page="/Account/Register">Регистрирай се</a>
    <a id="registerBtn" class="button-login-partial" asp-area="Identity" asp-page="/Account/Login">Вход</a>
}
